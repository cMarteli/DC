        <TextBox x:Name="Student_Name_Box" HorizontalAlignment="Left" Height="31" Margin="34,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="373" Text="Student Name"/>
        <TextBox x:Name="University_Name_Box" HorizontalAlignment="Left" Height="31" Margin="34,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="373" Text="University Name"/>
        <TextBox x:Name="CWA_Box" HorizontalAlignment="Left" Height="31" Margin="34,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="373" Text="CWA"/>

    </Grid>
</Window>
