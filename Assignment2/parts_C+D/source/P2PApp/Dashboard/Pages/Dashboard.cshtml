@page
@model Dashboard.Pages.DashboardModel
@{
	ViewData["Title"] = "Dashboard";
}
<h1>Dashboard</h1>

<!-- Checking if we have any clients to display -->
@if (Model.Clients != null && Model.Clients.Any()) {
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>IP Address</th>
                    <th>Port</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var client in Model.Clients) {
                        <tr>
                            <td>@client.Id</td>
                            <td>@client.IPAddress</td>
                            <td>@client.Port</td>
                        </tr>
            }
            </tbody>
        </table>
}
else {
        <p>No clients available.</p>
}

<!-- JavaScript to refresh the page every 1 minute (60000 milliseconds) -->
<script type="text/javascript">
    setTimeout(function() {
        location.reload();
    }, 60000);
</script>