@{
    ViewData["Title"] = "Admin User Management";
}
<nav class="navbar">
    <ul class="nav-ul">
        <li class="nav-li">
            <a href="#" class="nav-a" onclick="loadView('admin')">Admin</a>
        </li>
        <li class="nav-li">
            <a href="#" class="nav-a" onclick="loadView('adminusers')">User Management</a>
        </li>
        <li class="nav-li">
            <a href="#" class="nav-a" onclick="loadView('admintransactions')">Transaction Management</a>
        </li>
    </ul>
</nav>

<h1 id="status">
    Welcome!
</h1>

<h2>Create User</h2>
<form>
    <div class="form-div">
        <label for="Username">Username</label>
        <input type="text" name="Username" id="CreateUsername" placeholder="Username" required />
    </div>
    <div class="form-div">
        <label for="Name">Name</label>
        <input type="text" name="Name" id="CreateName" placeholder="Name" />
    </div>
    <div class="form-div">
        <label for="Email">Email</label>
        <input type="text" name="Email" id="CreateEmail" placeholder="Email Address" />
    </div>
    <div class="form-div">
        <label for="Address">Address</label>
        <input type="text" name="Address" id="CreateAddress" placeholder="Address" />
    </div>
    <div class="form-div">
        <label for="Phone">Phone</label>
        <input type="text" name="Phone" id="CreatePhone" placeholder="Phone Number" />
    </div>
    <div class="form-div">
        <label for="Password">Password</label>
        <input type="password" name="Password" id="CreatePassword" placeholder="Password" required />
    </div>
    <div>
        <button type="button" id="SubmitCreateUserButton" onclick="adminCreateUser()">Create User</button>
    </div>
</form>

<h2>Edit User</h2>
<form>
    <div class="form-div">
        <label for="Username">Username</label>
        <input type="text" name="Username" id="EditUsername" placeholder="Username for User to Edit">
    </div>
    <div class="form-div">
        <label for="Name">Name</label>
        <input type="text" name="Name" id="EditName" placeholder="Name">
    </div>
    <div class="form-div">
        <label for="Email">Email</label>
        <input type="text" name="Email" id="EditEmail" placeholder="Email Address">
    </div>
    <div class="form-div">
        <label for="Address">Address</label>
        <input type="text" name="Address" id="EditAddress" placeholder="Address">
    </div>
    <div class="form-div">
        <label for="Phone">Phone</label>
        <input type="text" name="Phone" id="EditPhone" placeholder="Phone Number">
    </div>
    <div>
        <button type="button" id="SubmitEditUserButton" onclick="adminEditUser()">Edit User</button>
    </div>
</form>

<h2>Delete User</h2>
<form>
    <div class="form-div">
        <label for="Username">Username</label>
        <input type="text" name="Username" id="DeleteUsername" placeholder="Username" required>
    </div>
    <div>
        <button type="button" id="SubmitDeleteUserButton" onclick="adminDeleteUser()">Delete User</button>
    </div>
</form>

<h2>Reset User Password</h2>
<form>
    <div class="form-div">
        <label for="Username">Username</label>
        <input type="text" name="Username" id="ResetUsername" placeholder="Username" required>
    </div>
    <div class="form-div">
        <label for="Password">Password</label>
        <input type="password" name="Password" id="ResetPassword" placeholder="Password" required>
    </div>
    <button type="button" id="SubmitResetUserButton" onclick="adminResetPassword()">Reset Password</button>
</form>

<h2>View User</h2>
<form>
    <div class="form-div">
        <label for="Username">Username</label>
        <input type="text" name="Username" id="ViewUsername" placeholder="Username" required>
    </div>
    <div>
        <button type="button" id="SubmitSearchUsernameButton" onclick="adminViewUser('username')">Search User by
            Username</button>
    </div>
</form>
<br />
<form>
    <div class="form-div">
        <label for="Email">Email</label>
        <input type="text" name="Email" id="ViewEmailAddress" placeholder="Email Address" required>
    </div>
    <div>
        <button type="button" id="SubmitSearchEmailButton" onclick="adminViewUser('email')">Search User by
            Email</button>
    </div>
</form>
<br />
@if (ViewData.ContainsKey("User") && ViewData["User"] != null)
{
    User? user = ViewData["User"] as User;
    if (user != null)
    {
        <div id="userProfile">
            <img src="data:image/bmp;base64, @user.Picture" width="100px" height="100px" alt="Admin Profile" />
            <p>Name: @user.Name</p>
            <p>Email: @user.Email</p>
            <p>Phone: @user.Phone</p>
            <p>Address: @user.Address</p>
            <p>Password: @user.Password</p>
        </div>
    }
}